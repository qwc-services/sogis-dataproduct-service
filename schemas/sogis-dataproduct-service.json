{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/qwc-services/sogis-dataproduct-service/master/schemas/sogis-dataproduct-service.json",
  "title": "SO!GIS Dataproduct Service",
  "type": "object",
  "properties": {
    "$schema": {
      "title": "JSON Schema",
      "description": "Reference to JSON schema of this config",
      "type": "string",
      "format": "uri",
      "default": "https://raw.githubusercontent.com/qwc-services/sogis-dataproduct-service/master/schemas/sogis-dataproduct-service.json"
    },
    "service": {
      "title": "Service name",
      "type": "string",
      "const": "dataproduct"
    },
    "config": {
      "title": "Config options",
      "type": "object"
    },
    "resources": {
      "title": "Resources",
      "type": "object",
      "properties": {
        "dataproducts": {
          "title": "Dataproducts",
          "type": "array",
          "items": {
            "title": "Dataproduct",
            "type": "object",
            "properties": {
              "identifier": {
                "description": "Dataproduct ID",
                "type": "string"
              },
              "display": {
                "description": "Display name",
                "type": "string"
              },
              "type": {
                "description": "Type of dataprodct",
                "type": "string",
                "enum": [
                  "datasetview",
                  "layergroup",
                  "facadelayer"
                ]
              },
              "synonyms": {
                "description": "Die Synonyme zum Namen als Suchbegriffe (0-n)",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "keywords": {
                "description": "Die Stichworte zum Datenprodukt als Suchbegriffe (0-n)",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "description": {
                "description": "Die Beschreibung des Dataproducts",
                "type": "string"
              },
              "searchterms": {
                "description": "Searchable Dataproducts (0-n)",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "contacts": {
                "description": "Die 1-n zuständigen Körperschaften des Dataproducts",
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Contact"
                },
                "minItems": 1
              },
              "bbox": {
                "description": "Layer bounding box. Example: [2605354.75, 1227225.125, 2608612.25, 1229926.625]",
                "type": "array",
                "items": {
                  "type": "number"
                },
                "minItems": 4,
                "maxItems": 4
              },
              "crs": {
                "description": "Coordinate reference system, e.g. EPSG:2056",
                "type": "string"
              },
              "visibility": {
                "description": "Default layer visibility",
                "type": "boolean"
              },
              "queryable": {
                "description": "Whether the layer is identifyable",
                "type": "boolean"
              },
              "displayField": {
                "description": "Field name to use as feature title in identify results",
                "type": "string"
              },
              "opacity": {
                "description": "Default layer opacity, 0-255",
                "type": "integer"
              },
              "datatype": {
                "description": "vector: Vectorlayer, raster: Rasterlayer, table: Table without geometry",
                "type": "string",
                "enum": [
                  "vector",
                  "raster",
                  "table"
                ]
              },
              "postgis_datasource": {
                "$ref": "#/definitions/PostgisDatasource"
              },
              "raster_datasource": {
                "$ref": "#/definitions/RasterDatasource"
              },
              "wms_datasource": {
                "$ref": "#/definitions/WmsDatasource"
              },
              "qml": {
                "description": "QGIS Style XML (escaped)",
                "type": "string"
              },
              "sublayers": {
                "description": "List of sublayer dataproduct identifiers",
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "identifier",
              "display",
              "type",
              "description",
              "contacts"
            ]
          }
        }
      }
    }
  },
  "required": [
    "service",
    "config",
    "resources"
  ],
  "definitions": {
    "Contact": {
      "title": "Contact",
      "type": "object",
      "properties": {
        "person": {
          "title": "Person",
          "type": "object",
          "properties": {
            "id": {
              "description": "Person ID",
              "type": "integer"
            },
            "name": {
              "description": "Name",
              "type": "string"
            },
            "street": {
              "description": "Street name",
              "type": "string"
            },
            "house_no": {
              "description": "House number",
              "type": "string"
            },
            "zip": {
              "description": "ZIP number",
              "type": "string"
            },
            "city": {
              "description": "City",
              "type": "string"
            },
            "country_code": {
              "description": "Country code ISO 3",
              "type": "string"
            },
            "function": {
              "description": "Function",
              "type": "string"
            },
            "email": {
              "description": "EMail",
              "type": "string"
            },
            "phone": {
              "description": "Phone number",
              "type": "string"
            }
          },
          "required": [
            "id",
            "name",
            "function"
          ]
        },
        "organisation": {
          "title": "Organisation",
          "type": "object",
          "properties": {
            "id": {
              "description": "Organization ID",
              "type": "integer"
            },
            "name": {
              "description": "Name",
              "type": "string"
            },
            "street": {
              "description": "Street name",
              "type": "string"
            },
            "house_no": {
              "description": "House number",
              "type": "string"
            },
            "zip": {
              "description": "ZIP number",
              "type": "string"
            },
            "city": {
              "description": "City",
              "type": "string"
            },
            "country_code": {
              "description": "Country code ISO 3",
              "type": "string"
            },
            "unit": {
              "description": "Unit",
              "type": "string"
            },
            "abbreviation": {
              "description": "Abbreviation",
              "type": "string"
            }
          },
          "required": [
            "id",
            "name"
          ]
        }
      },
      "required": [
        "organisation"
      ]
    },
    "PostgisDatasource": {
      "title": "Postgis Datasource",
      "type": "object",
      "properties": {
        "dbconnection": {
          "description": "e.g. service=sogis_webmapping",
          "type": "string"
        },
        "geometry_type": {
          "description": " e.g. MULTIPOLYGON",
          "type": "string"
        },
        "srid": {
          "description": "<srid>",
          "type": "integer"
        },
        "data_set_name": {
          "description": "Fully qualified DB table name",
          "type": "string"
        },
        "geometry_field": {
          "description": "Fieldname",
          "type": "string"
        },
        "primary_key": {
          "description": "Fieldname",
          "type": "string"
        }
      },
      "required": [
        "dbconnection",
        "geometry_type",
        "srid",
        "data_set_name",
        "geometry_field",
        "primary_key"
      ]
    },
    "RasterDatasource": {
      "title": "Raster Datasource",
      "type": "object",
      "properties": {
        "datasource": {
          "description": "File path",
          "type": "string"
        },
        "srid": {
          "description": "<srid>",
          "type": "integer"
        }
      },
      "required": [
        "datasource",
        "srid"
      ]
    },
   "WmsDatasource": {
      "title": "WmsDatasource",
      "type": "object",
      "properties": {
        "service_url": {
          "description": "Base URL of server",
          "type": "string"
        },
        "name": {
          "description": "WMS name of layer",
          "type": "string"
        }
      },
      "required": [
        "service_url",
        "name"
      ]
    }
  }
}
